{
    "version": 2,
    "builds": [
      {
        "src": "backend/main.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/main.py" },
      { "src": "/assets/(.*)", "dest": "/assets/$1" },
      { "src": "/favicon.ico", "dest": "/favicon.ico" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  